@model IEnumerable<DXTreelist0904.Models.Kategoriler>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
   // Html.RenderAction("KategoriEkle", "Modal");
}
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<h2>Kategoriler</h2>

<p>
    <a href="#" class="btn btn-info"
       onclick="openModal($(this), '/Modal/KategoriEkle');">Kategori Oluştur</a>
</p>
<table class="table" style="width:700px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategoriAdi)
        </td>
        <td>
            <a href="#" class="btn btn-default" onclick="openModal($(this), '/Modal/KategoriDuzenle?katID=@item.kategoriId');">Düzenle</a> |
            <a href="#" class="btn btn-default" onclick="openModal($(this), '/Modal/KategoriSil?katID=@item.kategoriId');">Sil</a>
        </td>
    </tr>
}

</table>
