@using DXTreelist0904.Models
@model Aciliyetler
@{
    Layout = null;
}



<div class="modal-dialog modal-md">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title ortala">Aciliyet Düzenle</h4>
        </div>
        @using (Html.BeginForm())
        {
            <div class="modal-body">


                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Aciliyet Tanımı : </span>
                        @Html.TextBoxFor(x => x.AciliyetTanim, new { @class = "form-control", aria_describedby = "basic-addon1" })
                    </div>
                    <br />
                   
                </div>

            </div>


            <div class="modal-footer">
                <input type="submit" value="Güncelle" class="btn btn-primary btn-sm" />
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            </div>
        }
    </div>

</div>
