@using DXTreelist0904.Models
@model Aciliyetler
@{
    Layout = null;
}



<div class="modal-dialog modal-md">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title ortala">Aciliyet Sil</h4>
        </div>

        <div class="modal-body">
            @if (ViewBag.acilSonuc != null)
            {
                <br />
                <div class="alert alert-danger" role="alert">@Html.Raw(ViewBag.acilSonuc)</div>
            }
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h4>Aşağıdaki aciliyet kaydını silmek istediğinize emin misiniz?</h4>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        Aciliyet Tanımı : 
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AciliyetTanim)
                    </dd>

                </dl>
            </div>
            
        <div class="modal-footer">
            <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
        </div>

            }
        </div>

</div>
